<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="projects.postcardly.controller.MainMenuController"
      alignment="CENTER" spacing="20"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #115393;">

    <Label text="Postcardly"
           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #ECF0F1;"/>

    <Label text="Your Travel Memories, Organized"
           style="-fx-font-size: 18px; -fx-text-fill: #BDC3C7;"/>

    <VBox spacing="15" alignment="CENTER">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>

        <Button text="View Trips" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                onAction="#handleViewTrips"/>

        <Button text="Create New Trip" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                onAction="#handleCreateTrip"/>

        <Button text="Settings" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                onAction="#handleSettings"/>
        <Button text="Exit" prefWidth="250" prefHeight="50"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                onAction="#handleExit"/>
    </VBox>

</VBox>
